<UserControl
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  xmlns:local="clr-namespace:MouldTool.Views"
  xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" 
  x:Class="MouldTool.Views.ShapePlate"
  mc:Ignorable="d" 
  d:DesignHeight="600" d:DesignWidth="600">
  <Canvas x:Name="Plate" Width="600" Height="600" Background="Black">
    <Canvas.RenderTransform>
      <TransformGroup>
        <ScaleTransform ScaleY="-1" ScaleX="1"/>
      </TransformGroup>
    </Canvas.RenderTransform>
    <Ellipse Width="300" Height="300" Canvas.Left="150" Canvas.Top="150" StrokeDashArray="8.5" Stroke="White"/>

  </Canvas>
</UserControl>
